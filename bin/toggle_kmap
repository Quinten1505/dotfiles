#!/bin/bash
kmap=$(setxkbmap -print | awk -F"+" '/xkb_symbols/ {print $2}')
if [[ $kmap == "us_custom" ]]; then
	$(setxkbmap fi_custom)
else
	$(setxkbmap us_custom)
fi
setxkbmap -option 'caps:ctrl_modifier' -option 'lv3:ralt_switch'
if [[ -z $1 ]]; then
	notify-no-icon "$KEYBOARD_ICON  $(setxkbmap -print | awk -F '+' '/xkb_symbols/ {print toupper($2)}')"
fi
